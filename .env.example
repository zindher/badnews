# Archivo de configuración LOCAL - NO COMMITEAR ESTO A GIT
# Copiar a .env.local después de clonar el proyecto

# ===== BACKEND (.NET) =====
# Copiar estos valores a appsettings.Development.json

# SQL Server
SQL_SERVER_CONNECTION_STRING=Server=(localdb)\mssqllocaldb;Database=BadNews_Dev;Integrated Security=true;

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Mercado Pago
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-your_access_token_here
MERCADO_PAGO_PUBLIC_KEY=your_public_key_here

# SendGrid
SENDGRID_API_KEY=SG.your_api_key_here
SENDGRID_FROM_EMAIL=noreply@badnews.mx

# JWT
JWT_SECRET=your_super_secret_key_that_is_very_long_and_secure_minimum_32_characters
JWT_ISSUER=BadNews
JWT_AUDIENCE=BadNewsUsers
JWT_EXPIRATION_MINUTES=60

# ===== FRONTEND (Vue 3) =====
# Copiar a frontend/.env.local después de clonar

VITE_API_BASE_URL=http://localhost:5000
VITE_MERCADO_PAGO_PUBLIC_KEY=your_public_key_here

# ===== MOBILE (Flutter) =====
# Actualizar en lib/config.dart

# API Base URL
API_BASE_URL=http://localhost:5000/api

# Twilio
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (opcional)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_API_KEY=your_api_key
